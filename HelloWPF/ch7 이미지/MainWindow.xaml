<Window x:Class="ch7_이미지.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch7_이미지"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image
                Width="100"
                x:Name="img"
                MouseEnter="img_MouseEnter"
                Source="https://cdn3.iconfinder.com/data/icons/geek-3/24/Autobots_transformers_robot_movie-256.png"></Image>
            <Button Width="100">
                <ContentControl>
                    <StackPanel>
                        <Image Source="https://cdn3.iconfinder.com/data/icons/geek-3/24/Autobots_transformers_robot_movie-256.png"></Image>
                        <TextBlock HorizontalAlignment="Center">로봇</TextBlock>
                    </StackPanel>
                </ContentControl>
            </Button>
            <Image Width="100" Source="/img/1.png" />

        </StackPanel>
    </Grid>
</Window>
